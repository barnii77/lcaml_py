let ggT_classic = |a, b| {
    if (a < 1 || b < 1) {
        return ();
    };
    if (a > b) {
        return ggT_classic (a - b) b;
    } else if (a < b) {
        return ggT_classic a (b - a);
    } else {
        return a;
    };
};

let ggT_modern = |a, b| {
    if (a < 1 || b < 1) {
        return ();
    };
    let remainder = a % b;
    if (remainder > 0) {
        return ggT_modern b remainder;
    };
    return b;
};

