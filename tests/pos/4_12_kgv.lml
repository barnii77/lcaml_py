let ggt = |a, b| {
    if (a < 1 || b < 1) {
        return ();
    };
    let remainder = a % b;
    if (remainder > 0) {
        return __this b remainder;
    };
    return b;
};

let kgv = |a, b| {
  if (a < 1 || b < 1) {
    return ();
  };
  return a * b / ggt a b;
};

